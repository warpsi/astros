{
	"name": "astros",
	"type": "module",
	"version": "1.0.2",
	"private": true,
	"scripts": {
		"dev": "astro dev --host",
		"start": "astro dev",
		"build": "astro build",
		"build:localized": "npm run i18n:generate && npm run build",
		"preview": "astro preview",
		"astro": "astro",
		"article:generate": "node ./scripts/generate-article.js",
		"i18n:generate": "astro-i18next generate && npm run script:change-language-in-dynamic-pages",
		"script:change-language-in-dynamic-pages": "node ./scripts/change-language-in-dynamic-pages.js",
		"pwa:generate-assets": "pwa-assets-generator --preset minimal public/logo.svg"
	},
	"dependencies": {
		"@astrojs/alpinejs": "^0.3.1",
		"@astrojs/rss": "^3.0.0",
		"@astrojs/sitemap": "^3.0.1",
		"@astrojs/tailwind": "^5.0.2",
		"@fontsource-variable/inter": "^5.0.13",
		"@types/alpinejs": "^3.13.2",
		"alpinejs": "^3.13.1",
		"astro": "^3.4.3",
		"astro-i18next": "^1.0.0-beta.21",
		"astro-icon": "^0.8.1",
		"astro-netlify-cms": "^0.5.4",
		"astro-seo": "^0.8.0",
		"bad-words": "^3.0.4",
		"dotenv": "^16.3.1",
		"openai": "^4.12.3",
		"rehype-autolink-headings": "^7.0.0",
		"rehype-slug": "^6.0.0",
		"rss-parser": "^3.13.0",
		"tailwindcss": "^3.3.5"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.10",
		"@vite-pwa/assets-generator": "^0.0.10",
		"@vite-pwa/astro": "^0.1.3",
		"prettier-plugin-astro": "^0.12.0",
		"prettier": "3.0.3",
		"rehype": "^13.0.1",
		"sharp": "^0.32.6",
		"workbox-window": "^7.0.0"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"bracketSameLine": true,
		"printWidth": 150,
		"htmlWhitespaceSensitivity": "ignore"
	}
}
